    border-width:1px;
    border-radius:3px;
}
CodeLabel TextField {
}


#InstructionUserCheckbox {
    margin-top:8px;
}
Toggle Label {
    margin-left:4px;
}


.pointer, .pointer *, Button, Button * { cursor:link }


.scrollview--tutorial > .unity-scroller--horizontal {
    display:none;
}

.poll-option #unity-checkmark {
    background-image: url('Images/Icons/CheckmarkEmpty.png');
}
.answered-poll .poll-option.correct #unity-checkmark, 
.poll-option.checked.correct #unity-checkmark {
    background-image: url('Images/Icons/Checkmark.png');
}
.poll-option.checked.wrong #unity-checkmark {
    background-image: url('Images/Icons/CheckmarkWrong.png');
}


