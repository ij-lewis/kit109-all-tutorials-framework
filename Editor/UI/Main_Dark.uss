    background-color: #353535;
}

.container--header-large {
    border-color: rgba(255,255,255,0.1);
}

.card {
    background-color: #414141;
    border-color: #212421;
}

.card:hover {
    background-color: #4A4A4A;
}

.card--link .container--tutorial-icon {
    background-color: #414141;
    border-color: #212421;
}

.container--tutorial {
    border-top-color: rgba(255, 255, 255, 0.05);
    background-color: #2E2E2E;
}

.container--instruction {
    background-color: #414141;
    border-bottom-color: rgba(0, 0, 0, 0.4);
}

.container--tutorial-actions {
    border-color: rgba(0,0,0,0.3);
}

.container--welcome-dialog-content {
    background-color: #2E2E2E;
}

.container--welcome-dialog-actions {
    border-color: rgba(0,0,0,0.5);
}

.code {
    /*-unity-font: url("/Assets/Tutorials/Fonts/consola.ttf");*/
    -unity-font-definition: resource("consolaSDF");  
}
.code_multiline {
    margin-left:8px;
    margin-right:8px;
    margin-top:8px;
    margin-bottom:8px;
}
InlineCodeLabel {
    font-size:12px;
    background-color:#222;
    padding-left:2px;
    padding-right:0px;
    padding-top:2px;
    padding-bottom:0px;
}

CodeLabel, CodeLabel  .unity-scroll-view__content-viewport {
    width:100%;
}
CodeLabel  .unity-scroll-view__content-container {
    min-width:100%;
}
CodeLabel  TextField {
    min-width:99%;
}
CodeLabel TextField TextInput {
    
    padding:4px;
    border-width:0px;
}
